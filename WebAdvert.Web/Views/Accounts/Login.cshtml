@model WebAdvert.Web.Models.Accounts.LoginModel;
@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col-md-4">
        <h4>Login using your email address and password</h4>
        <a asp-controller="Accounts" asp-action="Signup">If you are not a member you can sign up here</a>
  
    <hr/>
    <form asp-controller="Accounts" asp-action="Login" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-group" />
            <span asp-validation-for="Email"></span>

        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-group" />
            <span asp-validation-for="Password"></span>

        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe"/>
                
            </div>
            
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    </div>
</div>
